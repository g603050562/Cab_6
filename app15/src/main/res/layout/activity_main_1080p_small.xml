<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/image_bg_new">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_cabinet">

            <ImageView
                android:id="@+id/bg_hello_info"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/bg_hello_info"></ImageView>

            <LinearLayout
                android:id="@+id/downloadAppInfoLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bg_hello_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_download_app_qrcode"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/download_qcode"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/button_corners_true_white_radius_5"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/download_qcode"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="扫码下载\n哈喽换电\nAPP"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/downloadAppInfoLL"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="version:"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/version"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/bar_r_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/left_bar_null" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:gravity="center_horizontal|top"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textSize="60dp" />

                        <ImageView
                            android:id="@+id/bar_not_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:padding="7dp"
                            android:src="@drawable/left_bar_not"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/bar_r_text_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_corners_white_bottom_radius_5"
                            android:gravity="center"
                            android:text="0%"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="1px" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/bar_r_image_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/left_bar_null" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:gravity="center_horizontal|top"
                            android:text="2"
                            android:textColor="#ffffff"
                            android:textSize="60dp" />

                        <ImageView
                            android:id="@+id/bar_not_image_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:padding="7dp"
                            android:src="@drawable/left_bar_not"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/bar_r_text_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_corners_white_bottom_radius_5"
                            android:gravity="center"
                            android:text="0%"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/bar_r_image_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/left_bar_null" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:gravity="center_horizontal|top"
                            android:text="3"
                            android:textColor="#ffffff"
                            android:textSize="60dp" />

                        <ImageView
                            android:id="@+id/bar_not_image_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:padding="7dp"
                            android:src="@drawable/left_bar_not"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/bar_r_text_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_corners_white_bottom_radius_5"
                            android:gravity="center"
                            android:text="0%"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="1px" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/bar_r_image_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/left_bar_null" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:gravity="center_horizontal|top"
                            android:text="4"
                            android:textColor="#ffffff"
                            android:textSize="60dp" />

                        <ImageView
                            android:id="@+id/bar_not_image_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:padding="7dp"
                            android:src="@drawable/left_bar_not"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/bar_r_text_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_corners_white_bottom_radius_5"
                            android:gravity="center"
                            android:text="0%"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/info_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_logo"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/image_004" />

                    <LinearLayout
                        android:id="@+id/main_tel"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:text="24小时客服电话"
                            android:textSize="24dp" />

                        <TextView
                            android:id="@+id/tel_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="50dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/mid_cab_car" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="祝您一路畅行~"
                            android:textSize="24dp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/dialog_panel"
                    android:layout_width="400dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="600dp"
                    android:background="@drawable/button_corners_org_radius_5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/mid_cab_clock">

                        </ImageView>

                        <TextView
                            android:id="@+id/dialog_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="90dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="12dp"
                            android:text="s"
                            android:textColor="#ffffff"
                            android:textSize="60dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="150dp"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="30dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/mid_cab_message" />

                            <TextView
                                android:id="@+id/dialog_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text=""
                                android:textColor="#ffffff"
                                android:textSize="25dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_corners_true_orange_radius_5"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/cab_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00000"
                    android:textColor="#ffffff"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/now_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="正在获取站点..."
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/now_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="0000-00-00 00:00:00"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_corners_true_orange_radius_5">

                <FrameLayout
                    android:id="@+id/camera_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#333333">

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/camera_preview_panel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_corners_true_orange_radius_5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/right_camera" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="视频监控中"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_corners_true_orange_radius_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/rent_bar_qcode"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:background="@drawable/button_corners_true_white_radius_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="支付完成后\n\n扫码取电池"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_corners_org_white_radius_5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/b_3"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/b3" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="30dp"
                        android:background="#EB6100" />

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/right_cab_i2" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="温度"
                                    android:textColor="#F55B06"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/t_7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="0'C"
                                    android:textColor="#F55B06"
                                    android:textSize="15dp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="30dp"
                        android:background="#EB6100" />

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="30dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/right_cab_i1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="湿度"
                                    android:textColor="#F55B06"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/t_6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="0%"
                                    android:textColor="#F55B06"
                                    android:textSize="15dp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#EB6100" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="40dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/right_cab_i3" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="电表"
                                    android:textColor="#F55B06"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/t_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="#F55B06"
                                    android:textSize="15dp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="30dp"
                        android:background="#EB6100" />

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="35dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/right_cab_i4" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="功率"
                                    android:textColor="#F55B06"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/t_8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="0W"
                                    android:textColor="#F55B06"
                                    android:textSize="15dp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="30dp"
                        android:background="#EB6100" />

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/right_camera_online" />

                        <TextView
                            android:id="@+id/t_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="在线"
                            android:textColor="#F55B06"
