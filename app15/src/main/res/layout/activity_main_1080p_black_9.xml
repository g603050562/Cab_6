                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="4"
                android:paddingTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="78dp"
                    android:id="@+id/rent_bar_qcode"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:padding="5dp"
                    android:background="@drawable/button_corners_white_radius_5"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24小时服务热线"
                        android:textColor="#DFA947"
                        android:textSize="40dp"/>

                    <TextView
                        android:id="@+id/tel_text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#DAB173"
                        android:textSize="80dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="扫码绑定电池"
                            android:textColor="#A0CA2A"
                            android:textSize="25dp"/>

                        <TextView
                            android:layout_marginLeft="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电表："
                            android:textColor="#ffffff"
                            android:textSize="25dp"/>

                        <TextView
                            android:id="@+id/t_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0KWH"
                            android:textColor="#ffffff"
                            android:textSize="25dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="编号："
                            android:textColor="#ffffff"
                            android:textSize="25dp"/>

                        <TextView
                            android:id="@+id/cab_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000000"
                            android:textColor="#ffffff"
                            android:textSize="25dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="    /    "
                            android:textColor="#ffffff"
                            android:textSize="25dp"/>

                        <TextView
                            android:id="@+id/version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000000"
                            android:textColor="#ffffff"
                            android:textSize="25dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="    /    "
                            android:textColor="#ffffff"
                            android:textSize="25dp"/>

                        <TextView
                            android:id="@+id/now_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="25dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="78dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="扫码下载"
                            android:textSize="30dp"
                            android:textColor="#ffffff"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App"
                            android:textSize="25dp"
                            android:textColor="#ffffff"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:id="@+id/into_admin"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/download_qcode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:background="@drawable/button_corners_white_radius_5"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 电柜换电动画布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <client.halouhuandian.app15.view.customUi.activityDialog.BlackExchangeDialog_9
                android:id="@+id/animation_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

        </LinearLayout>
    </FrameLayout>

    <!-- 电柜摄像头展示logo布局 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <SurfaceView
            android:id="@+id/camera_surface_view"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="vertical"/>
    </RelativeLayout>

</RelativeLayout>
