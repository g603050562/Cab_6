                    </FrameLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="513dp"
                    android:layout_marginLeft="83dp">

                    <FrameLayout
                        android:layout_width="120dp"
