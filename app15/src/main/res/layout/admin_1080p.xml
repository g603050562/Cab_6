<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/retuen_page"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="返回"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/finish"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:text="退出程序"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="20dp">

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>

            </LinearLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="舱数"
                                android:textColor="#ffffff"
                                android:textSize="17dp" />

                            <LinearLayout
                                android:layout_width="1px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/item_1_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="默认：12"
                                    android:textColor="#ffffff"
                                    android:textSize="17dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="舱"
                                    android:textColor="#ffffff"
                                    android:textSize="17dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="1px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/item_1_setup"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/button_corners_orange_radius_10"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="设置"
                                    android:textColor="#ffffff"
                                    android:textSize="17dp" />

                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="30dp"
                            android:background="#ffffff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="本机电柜编号:"
                                    android:textColor="#ffffff"
                                    android:textSize="20dp" />

                                <EditText
                                    android:id="@+id/cabinet_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_radius_white_3"
                                    android:gravity="center"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:textColor="#666666"
                                    android:textColorHint="#cccccc"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/submit"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/button_corners_orange_radius_10"
                                android:gravity="center"
                                android:text="设置"
                                android:textColor="#ffffff"
                                android:textSize="17dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="30dp"
                            android:background="#ffffff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="left|center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="是否开启线程保护："
                                android:textColor="#ffffff"
                                android:textSize="17dp" />

                            <ImageView
                                android:id="@+id/thread_protection"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/select_is" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="30dp"
                            android:background="#ffffff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="1px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="下载更新包："
                                    android:textColor="#ffffff"
                                    android:textSize="17dp" />

                                <LinearLayout
                                    android:layout_width="1px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right">

                                    <TextView
                                        android:id="@+id/item_4_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:textColor="#ffffff"
                                        android:textSize="13dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="1px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right">

                                    <TextView
                                        android:id="@+id/item_4_text_buttom"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_corners_orange_radius_10"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="确定"
                                        android:textColor="#ffffff"
                                        android:textSize="17dp" />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="1px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="一键升级："
                                    android:textColor="#ffffff"
                                    android:textSize="17dp" />

                                <LinearLayout
                                    android:layout_width="1px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right">

                                    <TextView
                                        android:id="@+id/item_4_text_buttom_2"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_corners_orange_radius_10"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="确定"
                                        android:textColor="#ffffff"
                                        android:textSize="17dp" />


                                </LinearLayout>




                            </LinearLayout>

                        </LinearLayout>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="30dp"
                            android:background="#ffffff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="显示类型"
                                android:textColor="#ffffff"
                                android:textSize="17dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="720p"
                                android:textColor="#ffffff"
                                android:textSize="17dp" />

                            <ImageView
                                android:id="@+id/is_720p"
                                android:layout_marginLeft="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/select_not" />


                            <TextView
                                android:layout_marginLeft="30dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1080p"
                                android:textColor="#ffffff"
                                android:textSize="17dp" />

                            <ImageView
                                android:id="@+id/is_1080p"
                                android:layout_marginLeft="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/select_not" />


                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="更改后请退出程序，重新启动"
                            android:textColor="#cccccc"
                            android:textSize="13dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="20dp"
                            android:background="#ffffff" />

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="语音测试"
                                android:textColor="#ffffff"
                                android:textSize="17dp" />

                            <LinearLayout
                                android:layout_width="1px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right">

                                <TextView
                                    android:id="@+id/item_5_text_buttom"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/button_corners_orange_radius_10"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="确定"
                                    android:textColor="#ffffff"
                                    android:textSize="17dp" />


                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="30dp"
                            android:background="#ffffff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="电机地址编号:"
                                    android:textColor="#ffffff"
                                    android:textSize="20dp" />

                                <EditText
                                    android:id="@+id/charge_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_radius_white_3"
                                    android:gravity="center"
                                    android:paddingLeft="5dp"
                                    android:inputType="number"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:textColor="#666666"
                                    android:textColorHint="#cccccc"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/charge_submit"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/button_corners_orange_radius_10"
                                android:gravity="center"
                                android:text="设置"
                                android:textColor="#ffffff"
                                android:textSize="17dp" />

                        </LinearLayout>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="30dp"
                            android:background="#ffffff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="left|center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="小电流充电："
                                android:textColor="#ffffff"
                                android:textSize="17dp" />

                            <ImageView
                                android:id="@+id/small_ele_image"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/select_is" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="30dp"
                            android:background="#ffffff" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="最大电池数"
                                android:textColor="#ffffff"
                                android:textSize="17dp" />

                            <LinearLayout
                                android:layout_width="1px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/item_3_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12"
                                    android:textColor="#ffffff"
                                    android:textSize="17dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="块"
                                    android:textColor="#ffffff"
                                    android:textSize="17dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
