<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:background="@drawable/alertdialog_style"
		android:orientation="vertical">

		<EditText
			android:id="@+id/editview"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="30dp"
			android:hint="请输入密码"
			android:inputType="text"
			android:background="#eeeeee"
			android:layout_margin="10dp"
			android:textSize="17dp" />



		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="1px"
			android:background="#cccccc" />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/payAlertdialogSuccess"
				android:layout_width="1dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/button_left_bottom_corners_radius_10"
				android:gravity="center"
				android:padding="15dp"
				android:text="是"
				android:textSize="15dp"></TextView>

			<ImageView
				android:layout_width="1px"
				android:layout_height="fill_parent"
				android:background="#cccccc" />

			<TextView
				android:id="@+id/payAlertdialogError"
				android:layout_width="1dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/button_right_bottom_corners_radius_10"
				android:gravity="center"
				android:padding="15dp"
				android:text="否"
				android:textSize="15dp"></TextView>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>