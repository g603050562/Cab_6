<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="哈哈哈哈哈哈"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/open_door"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:background="@drawable/button_corners_orange_radius_5"
            android:gravity="center"
            android:text="开门"
            android:textColor="#ffffff"
            android:textSize="13dp"
            android:layout_marginLeft="100dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/dianliang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/dianya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wendu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/dianliu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/xunhuancichu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/soh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/yacha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/door"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/alternator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="哈哈哈哈哈哈"
                android:textColor="#ffffff"
                android:textSize="11dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_weight="1">


        </LinearLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/charge_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_corners_orange_radius_10"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="充电"
                android:textColor="#ffffff"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/charge_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_corners_orange_radius_10"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="停止充电"
                android:textColor="#ffffff"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffffff" />


</LinearLayout>
